{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "types": [
      "bun-types" // add Bun global
    ],
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}
